consoletype=$(/sbin/consoletype)

#if [ -x /bin/unicode_start ] && /sbin/consoletype fg ; then
#  /usr/bin/unicode_start
#fi

if [ $TERM = linux ]; then
  if [ "$consoletype" = "vt" ]; then
    [ -x /usr/bin/unicode_start ] && /sbin/consoletype fg && /usr/bin/unicode_start
  fi
fi

if [ $TERM = linux ]; then
  if [ "$consoletype" = "vt" ]; then
     [ -x /usr/bin/unicode_stop ] && /sbin/consoletype fg && /usr/bin/unicode_stop
  fi
fi
