<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE greeter SYSTEM "greeter.dtd">
<greeter>

<!-- main pic, login pic -->
<item type="pixmap">
	<normal file="kdm-drops.jpg"/>
	<pos x="0" y="0" width="100%" height="100%"/>

	<item type="pixmap">
		<normal file="login.png"/>
		<pos anchor="c" x="55%" y="50%" width="500" height="190"/>

		<item type="rect">
			<normal color="#ffff00" alpha="0.0"/>
			<pos anchor="e" x="50%" y="50%" width="190" height="180"/>

			<!-- username-label -->
			<item type="label">
				<pos anchor="ne" x="90%" y="40%"/>
				<normal color="#ffffff" font="Sans 10"/>
				<stock type="username-label"/>
			</item>

			<!-- password-label -->
			<item type="label">
				<pos anchor="ne" x="90%" y="60%"/>
				<normal color="#ffffff" font="Sans 10"/>
				<stock type="password-label"/>
			</item>
		</item>

		<item type="rect">
			<normal color="#00ffff" alpha="0.0"/>
			<pos anchor="w" x="50%" y="50%" width="190" height="180"/>

			<!-- username-entry -->
			<item type="entry" id="user-entry">
				<pos anchor="n" x="45%" y="40%" height="24" width="150"/>
			</item>

			<!-- password-entry -->
			<item type="entry" id="pw-entry">
				<pos anchor="n" x="45%" y="60%" height="24" width="150"/>
			</item>
		</item>
	</item>

	<item type="pixmap">
		<normal file="users.png"/>
		<pos anchor="c" x="39%" y="50%" width="200" height="200"/>

			<item type="rect" id="userlist-background">
			<pos x="0%" y="0%" width="95%" height="95%"/>
			<normal file="users.png" color="#707070" alpha="100"/>
			<fixed>
				<item type="rect" id="userlist">
					<normal file="users.png" alpha="100"/>
					<pos x="5%" y="5%" width="95%" height="95%"/>
					<show type="userlist"/>
				</item>
			</fixed>
		</item>
	</item>


	<!-- capslock-warning -->
	<item type="pixmap" id="caps-lock-warning">
		<normal file="error.png"/>
		<pos anchor="c" x="58%" y="58%" width="400" height="70"/>
		<item type="rect" id="caps-lock-warning">
			<pos anchor="c" x="50%" y="50%" width="box" height="box"/>
			<box orientation="vertical" min-width="400" xpadding="10" ypadding="5" spacing="0">
				<item type="label">
					<normal color="#FFFFFF" font="Sans 12"/>
					<pos x="50%" anchor="n"/>
					<stock type="caps-lock-warning"/>
				</item>
			</box>
		</item>
	</item>

	<!-- Login-Error -->
	<item type="label" id="pam-error">
		<normal file="error.png"/>
		<pos anchor="c" x="71%" y="60%" width="400" height="70"/>
		<item type="rect">
			<pos anchor="c" x="50%" y="50%" width="box" height="box"/>
			<box orientation="vertical" min-width="400" xpadding="10" ypadding="5" spacing="0">
			<normal color="#FFFFFF" font="Sans 12"/>
			<pos anchor="n" x="50%"/>
			<text></text>
			</box>
		</item>
	</item>
</item>


<!-- Wellcome on ... -->
<item type="label">
	<pos x="40%" y="35%"/>
	<normal color="#FFFFFF" font="Sans 14"/>
	<stock type="welcome-label"/>
</item>

<!-- Bottom bar -->
<item type="pixmap">
	<normal file="Footer.png"/>
	<pos x="0%" y="95%" width="100%" height="60"/>
</item>

<!-- icons and text in bottom bar -->
<item type="rect">
	<pos x="0%" y="95%" width="100%" height="60"/>

		<item type="pixmap" id="session_button" button="true">
			<normal file="Session_inactive.png"/>
			<prelight file="Session.png"/>
			<active file="Session.png"/>
			<pos x="3%" y="11%" width="48" height="48"/>
		</item>

		<!-- Session -->
		<item type="rect" id="session_button" button="true">
			<pos x="8%" y="22" width="100" height="100%"/>
			<item type="label">
				<normal color="#999999" font="Sans 12"/>
				<prelight color="#ffffff" font="Sans 12"/>
				<active color="#ff0000" font="Sans 12"/>
				<pos y="0" x="0"/>
				<stock type="session"/>
			</item>
		</item>


	<item type="pixmap" id="system_button" button="true">
		<normal file="System_inactive.png"/>
		<prelight file="System.png"/>
		<active file="System.png"/>
		<pos x="19%" y="10%" width="48" height="48"/>
	</item>

	<!-- clock -->
	<item type="label" id="clock">
		<normal color="#ffffff" font="Sans 12"/>
		<pos x="85%" y="22"/>
		<text>%c</text>
	</item>

	<!-- menu-button -->
	<item type="rect" id="system_button" button="true">
		<show modes="console" type="system"/>
		<pos x="25%" y="22" width="100" height="100%"/>
		<item type="label">
			<normal color="#999999" font="Sans 12"/>
			<prelight color="#ffffff" font="Sans 12"/>
			<active color="#ff0000" font="Sans 12"/>
			<pos y="0" x="0"/>
			<stock type="system"/>
		</item>
	</item>
</item>
</greeter>
